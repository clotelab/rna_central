extends ../../../lib/views/layout

block content
  #layout
    a#menuLink.menu-link(href='#menu')
      span
    #menu
      .pure-menu.pure-menu-open
        a.pure-menu-heading(href=webserver.folder)= webserver.title
        ul
          each tab in webserver.tabs
            li(class=(current_tab.title === tab.title ? "menu-item-divided pure-menu-selected" : ""))
              a(href=webserver.folder + _.first(tab.path).replace(/\/$/, ""))= tab.title
    #main
      .header
        h1= webserver.title
        h2= current_tab.title
      .content
        h2.content-subhead Try Resizing your Browser
