doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1")
    // bower:css
    link(rel='stylesheet', href='../../bower_components/pure/pure.css')
    link(rel='stylesheet', href='../../bower_components/font-awesome/css/font-awesome.css')
    // endbower
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    #layout
      a#menuLink.menu-link(href='#menu')
        span
      #menu
        .pure-menu.pure-menu-open
          a.pure-menu-heading(href=scoped_url())= webserver.title
          ul
            each tab in webserver.tabs
              li(class=(current_tab.title === tab.title ? "menu-item-divided pure-menu-selected" : ""))
                a(href=scoped_url(_.first(tab.path).replace(/\/$/, "")))= tab.title
      block content
    // bower:js
    // endbower
    script(src="/javascripts/ui.js")