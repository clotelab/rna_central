doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href="/vendor/pure/pure.css")
    link(rel='stylesheet', href="/vendor/font-awesome/css/font-awesome.css")
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-old-ie-min.css">
    <link rel="stylesheet" href="/stylesheets/side-menu-old-ie.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
    <link rel="stylesheet" href="/stylesheets/side-menu.css">
    <!--<![endif]-->
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    #layout
      a#menuLink.menu-link(href='#menu')
        span
      #menu
        .pure-menu.pure-menu-open
          a.pure-menu-heading(href=scoped_url())= webserver.title
          ul.pure-menu-list
            each tab in webserver.tabs
              li.pure-menu-item(class=(current_tab.title === tab.title ? "pure-menu-selected" : ""))
                a.pure-menu-link(href=scoped_url(_.first(tab.path).replace(/\/$/, "")))= tab.title
      = flash("warn")
      block content
    script(src="/javascripts/ui.js")