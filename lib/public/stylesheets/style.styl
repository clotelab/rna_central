$success   = rgb(28, 184, 65) /* this is a green */
$error     = rgb(202, 60, 60) /* this is a maroon */
$warning   = rgb(223, 117, 20) /* this is an orange */
$secondary = rgb(66, 184, 221) /* this is a light blue */

.button-success, .button-error, .button-warning, .button-secondary
  color: white
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)
  
.button-success
  background: $success
.button-error
  background: $error
.button-warning
  background: $warning
.button-secondary
  background: $secondary

