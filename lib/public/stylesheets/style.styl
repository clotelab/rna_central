.group:after
  content: ""
  display: table
  clear: both

.center
  display: table
  margin: 0 auto

$success      = rgb(28, 184, 65)
$error        = rgb(202, 60, 60)
$error_back   = #f9f2f4
$error_border = #e5d4d6
$warning      = rgb(223, 117, 20)
$secondary    = rgb(66, 184, 221)

.button-success, .button-error, .button-warning, .button-secondary
  color: white
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)

.button-success
  background: $success
.button-error
  background: $error
.button-warning
  background: $warning
.button-secondary
  background: $secondary

.button-xlarge
  font-size: 125%

#layout
  #menu
    font-weight: 300

    .pure-menu-heading
      background-color: black
      font-size: 125%
      text-transform: none

  #main
    .header
      /** To edit this background, follow this link:
          http://svgeneration.com/generate/Oriental-Roof?scale=5&color-1=eeeeee&fill-1=ffffff&color-2=eeeeee&fill-2=ffffff&color-3=eeeeee&fill-3=ffffff&color-4=eeeeee&fill-4=ffffff&color-5=eeeeee&fill-5=ffffff&
      */
      background-color: #eeeeee
      background-image: url('data:image/svg+xml;base64,')
      h2
        color: #aaa

    pre
      background: rgb(250, 250, 250)
      border: 1px solid #eee
      padding: 1em

      code
        background: rgb(250, 250, 250)
        padding: 0em

      code.nohighlight
        color: #000

    .content
      h3
        margin: 2em 1em
        font-weight: 200
        font-style: italic
        line-height: 1.8
        border-left: 5px solid #eee
        padding-left: 1em

      .flash + .content-subhead
        margin-top: 25px

      .flash
        background: rgb(209, 235, 238)
        color: rgb(102, 131, 145)
        margin-top: 1.5em
        border-radius: 3px
        padding: 1em 2em

      .flash-warn, .flash-form_error
        border: 1px solid $error_border
        background: $error_back
        color: $error

      form.pure-form
        .pure-control-group.has-success
          label
            color: $success

          input
            border: 1px solid $success


        .pure-control-group.has-error
          label
            color: $error

          input
            border: 1px solid $error
